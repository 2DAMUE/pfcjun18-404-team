<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.team.a404.a404team.HomeActivities.PerfilUsuario.PerfilUsuario">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/fondo_naranja">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imagen"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            app:civ_border="false" />

        <ImageView
            android:id="@+id/imagenperfil"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:visibility="invisible" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nombremodifica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/correoElectronicomodifica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textPersonName" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/guarda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorAccent"
            android:text="Modificar usuario"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />
    </FrameLayout>


</LinearLayout>
